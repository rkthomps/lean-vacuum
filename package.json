{
  "name": "lean-vacuum",
  "publisher": "KyleThompson",
  "displayName": "Lean Vacuum",
  "description": "Collect fine-grained lean theorem proving data. ",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lean4"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Lean Vacuum configuration",
      "properties": {
        "language": {
          "type": "string",
          "enum": [
            "lean4",
            "coq"
          ],
          "default": "lean4",
          "description": "For which langauge should this extension collect data."
        },
        "pushOnSave": {
          "type": "boolean",
          "default": false,
          "desctiption": "Whether this extension pushes to the remote git repo when a file is saved."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/adm-zip": "^0.5.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/tar-fs": "^2.0.4",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "dropbox": "^10.34.0",
    "tar-fs": "^3.0.6"
  }
}
